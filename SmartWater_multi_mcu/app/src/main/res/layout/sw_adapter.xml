<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_water_status"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/tv_bg"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/seek_duration_set"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_water_light"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <SeekBar
        android:id="@+id/seek_duration_set"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintLeft_toRightOf="@id/tv_water_status"
        app:layout_constraintRight_toLeftOf="@id/tv_duration_set"
        app:layout_constraintBottom_toTopOf="@id/btn_water_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <TextView
        android:id="@+id/tv_duration_set"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/tv_bg"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/seek_duration_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_duration_count"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <ImageView
        android:id="@+id/img_water_light"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/img_water_light"
        android:background="@drawable/img_light_water_off"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_water_start"
        app:layout_constraintTop_toBottomOf="@id/tv_water_status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Button
        android:id="@+id/btn_water_start"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:text="@string/btn_water_area_1"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg_water_start"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintLeft_toRightOf="@id/img_water_light"
        app:layout_constraintRight_toLeftOf="@id/tv_duration_count"
        app:layout_constraintTop_toBottomOf="@id/seek_duration_set"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_duration_count"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:background="@drawable/tv_bg"
        android:textSize="24sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/btn_water_start"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_duration_set"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>